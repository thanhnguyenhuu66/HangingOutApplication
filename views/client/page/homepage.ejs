<% layout('client/boilerplate') -%>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% for (i = 0; i < posts.length; i++) { %>
        <div class="post-preview">
          <a href="post.html">
            <h2 class="post-title">
              <%= posts[i].title %>
            </h2>
            <h3 class="post-subtitle">
              <%= posts[i].description %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#">
              <%= posts[i].author %>
            </a>
            on <%= posts[i].createdAt %>
          </p>
        </div>
        <hr>
      <% } %>
     
      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
      </div>
    </div>
  </div>
</div>
